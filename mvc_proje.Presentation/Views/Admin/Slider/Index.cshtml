@model mvc_proje.Application.Dtos.Admin.Slider.SliderDto

@{
  Layout = "_AdminLayout";
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <form method="post" asp-action="Create" asp-controller="Slider" asp-antiforgery="true"
                  enctype="multipart/form-data">
              <!--begin::Body-->
              <div class="card-body">
                <div class="mb-3">
                  <label for="Title" class="form-label">Başlık</label>
                  <input
                    type="text"
                    name="Title"
                    class="form-control"
                    id="Title"/>
                </div>

                <div class="mb-3">
                  <label for="Image" class="form-label">Resim</label>
                  <input
                    type="file"
                    name="Image"
                    class="form-control"
                    id="Image"/>
                </div>

                <div class="col md-4 mb-3">
                  <div class="col md-2">
                    <div class="mb-3">
                      <label for="Button1Text" class="form-label">Buton 1 - Yazı</label>
                      <input
                        type="text"
                        name="Button1Text"
                        class="form-control"
                        id="Button1Text"/>
                    </div>
                  </div>
                  <div class="col md-2">
                    <div class="mb-3">
                      <label for="Button1Url" class="form-label">Buton 1 - URL</label>
                      <input
                        type="text"
                        name="Button1Url"
                        class="form-control"
                        id="Button1Url"/>
                    </div>
                  </div>
                </div>

                <div class="col md-4 mb-3">
                  <div class="col md-2">
                    <div class="mb-3">
                      <label for="Button2Text" class="form-label">Buton 2 - Yazı</label>
                      <input
                        type="text"
                        name="Button2Text"
                        class="form-control"
                        id="Button2Text"/>
                    </div>
                  </div>
                  <div class="col md-2">
                    <div class="mb-3">
                      <label for="Button2Url" class="form-label">Buton 2 - URL</label>
                      <input
                        type="text"
                        name="Button2Url"
                        class="form-control"
                        id="Button2Url"/>
                    </div>
                  </div>
                </div>
              </div>
              <!--end::Body-->
              <!--begin::Footer-->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Gönder</button>
              </div>
              <!--end::Footer-->
            </form>
          </div>
          <!-- /.card-body -->
        </div>
      </div>

      <div class="col-md-8">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Başlık</th>
                <th>Buton 1</th>
                <th>Buton 2</th>
                <th>Resim URL</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var slider in Model.Sliders)
              {
                <tr class="align-middle">
                  <td>@slider.Id</td>
                  <td>@slider.Title</td>
                  <td><a href="@slider.Button1Url">@slider.Button1Text</a></td>
                  <td><a href="@slider.Button2Url">@slider.Button2Text</a></td>
                  <td>@slider.ImageUrl
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id"
                         class="btn btn-sm btn-primary">Düzenle</a>
                      <a type="submit" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          @await Html.PartialAsync("_Pagination")
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
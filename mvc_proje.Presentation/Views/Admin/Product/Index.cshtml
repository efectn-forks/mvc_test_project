@model mvc_proje.Application.Dtos.Admin.Product.ProductDto

@{
  Layout = "_AdminLayout";
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>SKU</th>
                <th>İsim</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Kategori</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var product in Model.Products)
              {
                <tr class="align-middle">
                  <td>@product.Id</td>
                  <td>@product.SkuNumber</td>
                  <td>@product.Name</td>
                  <td>@product.Price</td>
                  <td>@product.Stock</td>
                  <td>@product.Category.Name</td>
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                         class="btn btn-sm btn-primary">Düzenle</a>
                      <a type="submit" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          @await Html.PartialAsync("_Pagination")
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
@model mvc_proje.Application.Dtos.Admin.ContactMessage.ContactMessageDto

@{
  Layout = "_AdminLayout";
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Konu</th>
                <th>İsim</th>
                <th>Email</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var message in Model.ContactMessages)
              {
                <tr class="align-middle">
                  <td>@message.Id</td>
                  <td>@message.Subject</td>
                  <td>@message.Name</td>
                  <td>@message.Email</td>
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="ContactMessage" asp-action="Show" asp-route-id="@message.Id"
                         class="btn btn-sm btn-success">Göster</a>
                      <a type="submit" asp-controller="ContactMessage" asp-action="Delete" asp-route-id="@message.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          @await Html.PartialAsync("_Pagination")
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
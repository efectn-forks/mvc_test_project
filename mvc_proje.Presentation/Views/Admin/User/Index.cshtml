@using mvc_proje.Domain.Enums
@model mvc_proje.Application.Dtos.Admin.User.UserDto

@{
  Layout = "_AdminLayout";
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>K. Adı</th>
                <th>Email</th>
                <th>Sipariş Sayısı</th>
                <th>Yazı Sayısı</th>
                <th style="width: 40px">Yetki</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var user in Model.Users)
              {
                <tr class="align-middle">
                  <td>@user.Id</td>
                  <td>@user.Username</td>
                  <td>@user.Email</td>
                  <td>@user.Orders.Count</td>
                  <td>@user.Posts.Count</td>
                  @if (user.Role == Role.Admin)
                  {
                    <td><span class="badge text-bg-danger">Admin</span></td>
                  }
                  else
                  {
                    <td><span class="badge text-bg-success">Kullanıcı</span></td>
                  }
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"
                         class="btn btn-sm btn-primary">Düzenle</a>
                      <a type="submit" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-end">
              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
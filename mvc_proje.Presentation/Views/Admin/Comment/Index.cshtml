@model mvc_proje.Application.Dtos.Admin.Comment.CommentIndexDto

@{
  Layout = "_AdminLayout";

  string Truncate(string value, int maxLength)
  {
    if (!string.IsNullOrEmpty(value) && value.Length > maxLength)
    {
      return value.Substring(0, maxLength);
    }

    return value;
  }
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Kullanıcı</th>
                <th>Yazı</th>
                <th>Ana Yorum ID</th>
                <th>Yorum</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var comment in Model.Comments)
              {
                <tr class="align-middle">
                  <td>@comment.Id</td>
                  <td>@comment.User.Username</td>
                  <td>@comment.Post.Title</td>
                  <td>@comment.ParentCommentId</td>
                  <td>@Truncate(comment.Text, 100)...</td>
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-end">
              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
@using mvc_proje.Application.Dtos.Admin.User
@using mvc_proje.Domain.Entities
@model mvc_proje.Application.Dtos.Admin.Review.ReviewDto

@{
  Layout = "_AdminLayout";

  string Truncate(string value, int maxLength)
  {
    if (!string.IsNullOrEmpty(value) && value.Length > maxLength)
    {
      return value.Substring(0, maxLength);
    }

    return value;
  }
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <form method="post" asp-action="Create" asp-controller="Review" asp-antiforgery="true">
              <!--begin::Body-->
              <div class="card-body">
                <div class="mb-3">
                  <label for="UserId" class="form-label">Kullanıcı</label>
                  <select class="form-select" name="UserId" id="UserId" aria-label="Default select example">
                    @foreach (var user in (ViewData["Users"] as UserDto).Users)
                    {
                      <option value="@user.Id">@user.FullName</option>
                    }
                  </select>
                </div>

                <div class="mb-3">
                  <label for="UserTitle" class="form-label">Kullanıcı Unvanı</label>
                  <input
                    type="text"
                    name="UserTitle"
                    class="form-control"
                    id="UserTitle"/>
                </div>

                <div class="mb-3">
                  <label for="Text" class="form-label">İnceleme Yazısı</label>
                  <textarea class="form-control" name="Text" id="Text"></textarea>
                </div>
              </div>
              <!--end::Body-->
              <!--begin::Footer-->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Gönder</button>
              </div>
              <!--end::Footer-->
            </form>
          </div>
          <!-- /.card-body -->
        </div>
      </div>

      <div class="col-md-8">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Kullanıcı Adı - Unvan</th>
                <th>İnceleme</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var review in Model.Reviews)
              {
                <tr class="align-middle">
                  <td>@review.Id</td>
                  <td>@review.User.Username - @review.UserTitle</td>
                  <td>@Truncate(review.Text, 50)...</td>
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="Review" asp-action="Edit" asp-route-id="@review.Id"
                         class="btn btn-sm btn-primary">Düzenle</a>
                      <a type="submit" asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          @await Html.PartialAsync("_Pagination")
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
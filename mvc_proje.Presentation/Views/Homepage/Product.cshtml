@model mvc_proje.Application.Dtos.Product.ProductShowDto
@{
    Layout = "_Layout";
}

<style>
    .product-gallery {
        position: relative;
    }

    .gallery-thumbnails {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .thumbnail {
        width: 80px;
        height: 80px;
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .thumbnail:hover,
    .thumbnail.active {
        border-color: #4a7c0f;
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-details {
        padding-left: 30px;
    }

    .product-title {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: #333;
    }

    .product-price {
        font-size: 2rem;
        color: #4a7c0f;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .product-description {
        margin-bottom: 30px;
        color: #555;
        line-height: 1.7;
    }

    .product-meta {
        margin-bottom: 25px;
    }

    .meta-item {
        margin-bottom: 10px;
        display: flex;
    }

    .meta-label {
        font-weight: 600;
        min-width: 120px;
        color: #333;
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .quantity-btn {
        width: 40px;
        height: 40px;
        background: #f1f8e9;
        border: 1px solid #ddd;
        font-size: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .quantity-input {
        width: 60px;
        height: 40px;
        text-align: center;
        border: 1px solid #ddd;
        border-left: none;
        border-right: none;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn-cart {
        flex: 1;
    }

    .product-tabs {
        margin-top: 50px;
    }

    .tab-content {
        padding: 30px;
        border: 1px solid #eee;
        border-top: none;
    }

    .related-products {
        margin-top: 60px;
    }

    .related-title {
        position: relative;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .related-title::after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 80px;
        height: 2px;
        background: #4a7c0f;
    }
</style>

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">@Model.Product.Name</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Homepage"
                                               asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Homepage" asp-action="Products">Ürünler
                        | @Model.Product.Category.Name</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">@Model.Product.Name</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->


<!-- Product Detail Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Product Gallery -->
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="product-gallery">
                    <div class="position-relative bg-light overflow-hidden rounded">
                        <img class="img-fluid w-100"
                             src="@Url.Content(Model.Product.ImageUrl)" width="200" height="80"
                             alt="@Model.Product.Name">
                    </div>

                    <div class="gallery-thumbnails">
                        <div class="thumbnail active">
                            <img
                                src="@Url.Content(Model.Product.ImageUrl)" width="200" height="80"
                                alt="@Model.Product.Name">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="product-details">
                    <h1 class="product-title">@Model.Product.Name</h1>

                    <div class="product-price">
                        $@Model.Product.Price
                    </div>

                    <p class="product-description">
                        @Model.Product.Description
                    </p>

                    <div class="product-meta">
                        <div class="meta-item">
                            <span class="meta-label">Category:</span>
                            <span>@Model.Product.Category.Name</span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Availability:</span>
                            @if (Model.Product.Stock > 0)
                            {
                                <span class="text-success">In Stock (@Model.Product.Stock units)</span>
                            }
                            else
                            {
                                <span class="text-danger">Out of Stock</span>
                            }
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">SKU:</span>
                            <span>@Model.Product.SkuNumber</span>
                        </div>
                    </div>

                    <form method="post" asp-controller="Cart" asp-action="Add" asp-antiforgery="true">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id">
                        <div class="quantity-selector">
                            <div class="quantity-btn" id="decrease-qty">-</div>
                            <input type="number" name="Quantity" class="quantity-input" value="1" min="1" max="10"
                                   id="product-qty">
                            <div class="quantity-btn" id="increase-qty">+</div>
                        </div>

                        <div class="action-buttons">
                            <button type="submit" class="btn btn-primary py-3 px-5 btn-cart">
                                <i class="fa fa-shopping-cart me-2"></i>Add to Cart
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Product Tabs -->
        <div class="product-tabs wow fadeInUp" data-wow-delay="0.5s">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-description-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-description" type="button" role="tab"
                            aria-controls="pills-description" aria-selected="true">Description
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-description" role="tabpanel"
                     aria-labelledby="pills-description-tab">
                    <h4 class="mb-3">About This Product</h4>
                    @Model.Product.Description
                </div>
            </div>
        </div>

        <!-- Related Products -->
        <div class="related-products wow fadeInUp" data-wow-delay="0.7s">
            <h3 class="related-title">You May Also Like</h3>

            <div class="row g-4">
                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="product-item">
                            <div class="position-relative bg-light overflow-hidden rounded">
                                <img class="img-fluid w-100"
                                     src="@Url.Content(product.ImageUrl)"
                                     alt="@product.Name">
                            </div>
                            <div class="text-center p-4">
                                <a class="d-block h5 mb-2" href="">@product.Name</a>
                                <span class="text-primary me-1">$@product.Price</span>
                            </div>
                            <div class="d-flex border-top">
                                <small class="w-50 text-center border-end py-2">
                                    <a class="text-body" asp-controller="Homepage" asp-action="Product"
                                       asp-route-id="@product.Id"><i class="fa fa-eye text-primary me-2"></i>View
                                        detail</a>
                                </small>
                                <small class="w-50 text-center py-2">
                                    <form asp-controller="Cart" asp-action="Add" asp-antiforgery="true" method="post">
                                        <input type="hidden" name="productId" value="@product.Id"/>
                                        <input type="hidden" name="quantity" value="1"/>
                                        <button type="submit" class="btn btn-link text-body p-0">
                                            <i class="fa fa-shopping-cart text-primary me-2"></i>Add to cart
                                        </button>
                                    </form>
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Product Detail End -->

<script>
    // Quantity selector functionality
    document.getElementById('increase-qty').addEventListener('click', function () {
        const input = document.getElementById('product-qty');
        let value = parseInt(input.value) || 0;
        input.value = value + 1;
    });

    document.getElementById('decrease-qty').addEventListener('click', function () {
        const input = document.getElementById('product-qty');
        let value = parseInt(input.value) || 0;
        if (value > 1) {
            input.value = value - 1;
        }
    });

    // Thumbnail gallery functionality
    const thumbnails = document.querySelectorAll('.thumbnail');
    const mainImage = document.querySelector('.product-gallery img');

    thumbnails.forEach(thumbnail => {
        thumbnail.addEventListener('click', function () {
            // Remove active class from all thumbnails
            thumbnails.forEach(t => t.classList.remove('active'));

            // Add active class to clicked thumbnail
            this.classList.add('active');

            // Update main image
            const newSrc = this.querySelector('img').src.replace('200', '800');
            mainImage.src = newSrc;
        });
    });

    // Review star rating functionality
    const reviewStars = document.querySelectorAll('#pills-reviews .rating .far, #pills-reviews .rating .fas');
    reviewStars.forEach(star => {
        star.addEventListener('click', function () {
            const rating = this.getAttribute('data-value') || 0;
            const parent = this.parentNode;

            // Reset all stars
            parent.querySelectorAll('i').forEach(s => {
                s.classList.remove('fas');
                s.classList.add('far');
            });

            // Fill stars up to clicked star
            for (let i = 0; i <= rating; i++) {
                if (parent.children[i]) {
                    parent.children[i].classList.remove('far');
                    parent.children[i].classList.add('fas');
                }
            }
        });
    });
</script>
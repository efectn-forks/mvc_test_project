@using mvc_proje.Domain.Enums
@model mvc_proje.Application.Dtos.Order.OrderTrackDto

<style>
    .tracking-page {
        padding: 80px 0;
    }

    .tracking-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        max-width: 800px;
        margin: 0 auto;
    }

    .tracking-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .tracking-header h1 {
        color: #4a7c0f;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .tracking-form {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 500;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        height: 50px;
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 0 15px;
        font-size: 16px;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #4a7c0f;
        box-shadow: 0 0 0 3px rgba(74, 124, 15, 0.1);
        outline: none;
    }

    .btn-tracking {
        background: #4a7c0f;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: block;
        width: 100%;
        font-size: 16px;
    }

    .btn-tracking:hover {
        background: #3a650a;
        transform: translateY(-2px);
    }

    .tracking-status {
        background: #f1f8e9;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
    }

    .status-icon {
        width: 50px;
        height: 50px;
        background: #e8f5e9;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .status-icon i {
        font-size: 24px;
        color: #4a7c0f;
    }

    .status-text h4 {
        margin-bottom: 5px;
        color: #333;
    }

    .status-text p {
        margin: 0;
        color: #666;
    }

    .tracking-bar {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin: 30px 0;
        padding: 0 20px;
    }

    .tracking-bar::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 0;
        right: 0;
        height: 4px;
        background: #e0e0e0;
        z-index: 1;
    }

    .tracking-step {
        position: relative;
        z-index: 2;
        text-align: center;
        flex: 1;
    }

    .step-icon {
        width: 40px;
        height: 40px;
        background: #fff;
        border: 2px solid #4a7c0f;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        color: #4a7c0f;
    }

    .step-icon.active {
        background: #4a7c0f;
        color: white;
    }

    .step-label {
        font-size: 14px;
        color: #666;
    }

    .step-label.active {
        color: #4a7c0f;
        font-weight: 600;
    }

    .order-summary {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
    }

    .order-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

    .order-row:last-child {
        border-bottom: none;
    }

    .order-label {
        color: #555;
        font-weight: 500;
    }

    .order-value {
        font-weight: 600;
        color: #333;
    }

    .order-items {
        margin-top: 30px;
    }

    .order-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #eee;
    }

    .order-item-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        overflow: hidden;
        margin-right: 20px;
    }

    .order-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .order-item-details {
        flex: 1;
    }

    .order-item-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .order-item-meta {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .order-item-price {
        font-weight: 600;
        color: #4a7c0f;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .status-updates {
        margin-top: 30px;
    }

    .update-card {
        background: white;
        border-left: 4px solid #4a7c0f;
        border-radius: 0 8px 8px 0;
        padding: 15px 20px;
        margin-bottom: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    }

    .update-time {
        font-size: 14px;
        color: #888;
        margin-bottom: 5px;
    }

    .update-text {
        margin: 0;
        color: #333;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .status-preparing {
        background: #f1f8e9;
        color: #4a7c0f;
    }

    .status-shipped {
        background: #e3f2fd;
        color: #1976d2;
    }

    .status-delivered {
        background: #e8f5e9;
        color: #2e7d32;
    }

    .status-cancelled {
        background: #ffebee;
        color: #c62828;
    }

    @@media (max-width: 768px) {
        .tracking-card {
            padding: 25px;
        }

        .tracking-bar {
            flex-wrap: wrap;
        }

        .tracking-step {
            flex: 0 0 50%;
            margin-bottom: 30px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons .btn {
            width: 100%;
        }
    }
</style>

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Track Your Order</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a class="text-body" href="orders.html">My Orders</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Track Order</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Order Tracking Section Start -->
<div class="container-xxl tracking-page">
    <div class="container">
        <div class="tracking-card">
            <div class="tracking-status">
                <div class="status-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="status-text">
                    <h4>Order #@Model.Order.OrderNumber</h4>
                </div>
                <div class="ms-auto">
                    <span class="status-badge status-shipped">@Model.LatestTrackStatus</span>
                </div>
            </div>

            <div class="tracking-bar">
                @if (Model.LatestTrackStatus != TrackStatus.Cancelled && Model.Order.PaymentStatus == PaymentStatus.Completed)
                {
                    <div class="tracking-step">
                        <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Pending ? "active" : "")">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Pending ? "active" : "")">
                            Pending
                        </div>
                    </div>

                    <div class="tracking-step">
                        <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Shipped ? "active" : "")">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Shipped ? "active" : "")">
                            Shipped
                        </div>
                    </div>

                    <div class="tracking-step">
                        <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Delivered ? "active" : "")">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Delivered ? "active" : "")">
                            Delivered
                        </div>
                    </div>
                }
                else
                {
                    <div class="tracking-step">
                        <div class="step-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="step-label">Cancelled</div>
                        
                        @if (Model.Order.PaymentStatus == PaymentStatus.Failed)
                        {
                            <span class="status-badge status-cancelled">Payment Cancelled</span>
                        }
                        else if (Model.Order.PaymentStatus == PaymentStatus.Pending)
                        {
                            <span class="status-badge status-preparing">Preparing for Payment</span>
                        }
                    </div>
                }
            </div>

            <div class="status-updates">
                <h4 class="mb-3">Recent Updates</h4>

                @foreach (var track in Model.Order.OrderTracks)
                {
                    <div class="update-card">
                        <div
                            class="update-time">@track.CreatedAt.ToShortDateString() â€¢ @track.CreatedAt.ToShortTimeString()</div>
                        <p class="update-text"><b>@track.Status:</b> @track.TrackingInfo</p>
                    </div>
                }
            </div>

            <div class="order-summary">
                <h4 class="mb-4">Order Summary</h4>

                <div class="order-row">
                    <span class="order-label">Order Date:</span>
                    <span class="order-value">@Model.Order.CreatedAt.ToShortDateString()</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Delivery Address:</span>
                    <span class="order-value">@Model.User.Address</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Contact:</span>
                    <span class="order-value">@Model.User.PhoneNumber | @Model.User.Email</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Total Amount:</span>
                    <span class="order-value">$@Model.TotalAmount</span>
                </div>
            </div>

            <h4 class="mb-4">Order Items</h4>

            <div class="order-items">
                @foreach (var item in Model.Order.OrderItems)
                {
                    <div class="order-item">
                        <div class="order-item-image">
                            <img
                                src="@Url.Content(item.Product.GetMainImage().ImageUrl)"
                                alt="@item.Product.Name">
                        </div>
                        <div class="order-item-details">
                            <h5 class="order-item-title">@item.Product.Name</h5>
                            <div class="order-item-meta">SKU: @item.Product.SkuNumber | Quantity: @item.Quantity</div>
                            <div class="order-item-price">$@item.UnitPrice</div>
                        </div>
                    </div>
                }
            </div>

            <div class="action-buttons">
                <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-primary py-3 px-5">
                    <i class="fa fa-list me-2"></i>View All Orders
                </a>
                <a asp-controller="Homepage" asp-action="Contact" class="btn btn-outline-secondary py-3 px-5">
                    <i class="fa fa-headset me-2"></i>Contact Support
                </a>
                <a asp-controller="Homepage" asp-action="Product" class="btn btn-primary py-3 px-5">
                    <i class="fa fa-shopping-bag me-2"></i>Shop Again
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Order Tracking Section End -->
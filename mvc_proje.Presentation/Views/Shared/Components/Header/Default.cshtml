@model mvc_proje.Domain.Misc.Settings

@{
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
}

<!-- Navbar Start -->
<div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
        <div class="col-lg-6 px-5 text-start">
            <small><i class="fa fa-map-marker-alt me-2"></i>@Model.Address</small>
            <small class="ms-4"><i class="fa fa-envelope me-2"></i>@Model.Email</small>
        </div>
        <div class="col-lg-6 px-5 text-end">
            <small>Follow us:</small>
            <a class="text-body ms-3" href="@Model.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
            <a class="text-body ms-3" href="@Model.TwitterUrl"><i class="fab fa-twitter"></i></a>
            <a class="text-body ms-3" href="@Model.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a>
            <a class="text-body ms-3" href="@Model.InstagramUrl"><i class="fab fa-instagram"></i></a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
        <a asp-controller="Homepage" asp-action="Index" class="navbar-brand ms-4 ms-lg-0">
            <h1 class="fw-bold text-primary m-0">@Model.Sitename</h1>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a asp-controller="Homepage" asp-action="Index" class="nav-item nav-link active">Home</a>
                <a asp-controller="Homepage" asp-action="AboutUs" class="nav-item nav-link">About Us</a>
                <a asp-controller="Homepage" asp-action="Products" class="nav-item nav-link">Products</a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                    <div class="dropdown-menu m-0">
                        <a asp-controller="Homepage" asp-action="Blog" class="dropdown-item">Blog</a>
                        <a asp-controller="Homepage" asp-action="Features" class="dropdown-item">Our Features</a>
                        <a asp-controller="Homepage" asp-action="Testimonials" class="dropdown-item">Testimonial</a>
                    </div>
                </div>
                <a asp-controller="Homepage" asp-action="Contact" class="nav-item nav-link">Contact Us</a>
            </div>
            <div class="d-none d-lg-flex ms-2">
                <a class="btn-sm-square bg-white rounded-circle ms-3" asp-controller="Profile" asp-action="Index">
                    <small class="fa fa-user text-body"></small>
                </a>
                @if (isLoggedIn)
                {
                    <a class="btn-sm-square bg-white rounded-circle ms-3" asp-controller="Auth" asp-action="Logout">
                        <small class="fa fa-arrow-right-from-bracket text-body"></small>
                    </a>
                }
                else
                {
                    <a class="btn-sm-square bg-white rounded-circle ms-3" asp-controller="Auth" asp-action="Login">
                        <small class="fa fa-right-to-bracket text-body"></small>
                    </a>
                }
                <a class="btn-sm-square bg-white rounded-circle ms-3" asp-controller="Cart" asp-action="Index">
                    <small class="fa fa-shopping-bag text-body"></small>
                </a>
                <a class="btn-sm-square bg-white rounded-circle ms-3" asp-controller="Wishlist" asp-action="Index">
                    <small class="fa fa-heart text-body"></small>
                </a>
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End !-->
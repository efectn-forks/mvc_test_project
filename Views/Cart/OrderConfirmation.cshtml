@using mvc_proje.Database.Entities
@model OrderConfirmationViewModel

<style>
    .success-page {
        padding: 80px 0;
    }

    .success-icon {
        width: 120px;
        height: 120px;
        background: #e8f5e9;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
    }

    .success-icon i {
        font-size: 60px;
        color: #4a7c0f;
    }

    .success-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        max-width: 800px;
        margin: 0 auto;
    }

    .success-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .success-header h1 {
        color: #4a7c0f;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .success-header p {
        color: #666;
        font-size: 18px;
    }

    .order-summary {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
    }

    .order-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

    .order-row:last-child {
        border-bottom: none;
    }

    .order-label {
        color: #555;
        font-weight: 500;
    }

    .order-value {
        font-weight: 600;
        color: #333;
    }

    .order-items {
        margin-top: 30px;
    }

    .order-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #eee;
    }

    .order-item-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        overflow: hidden;
        margin-right: 20px;
    }

    .order-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .order-item-details {
        flex: 1;
    }

    .order-item-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .order-item-meta {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .order-item-price {
        font-weight: 600;
        color: #4a7c0f;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .track-order {
        background: #f1f8e9;
        border-radius: 10px;
        padding: 25px;
        margin-top: 30px;
        text-align: center;
    }

    .track-order p {
        margin-bottom: 20px;
        color: #555;
    }

    .tracking-bar {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin: 30px 0;
        padding: 0 20px;
    }

    .tracking-bar::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 0;
        right: 0;
        height: 4px;
        background: #e0e0e0;
        z-index: 1;
    }

    .tracking-step {
        position: relative;
        z-index: 2;
        text-align: center;
        flex: 1;
    }

    .step-icon {
        width: 40px;
        height: 40px;
        background: #fff;
        border: 2px solid #4a7c0f;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        color: #4a7c0f;
    }

    .step-icon.active {
        background: #4a7c0f;
        color: white;
    }

    .step-label {
        font-size: 14px;
        color: #666;
    }

    .step-label.active {
        color: #4a7c0f;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
    .success-card {
        padding: 25px;
    }

    .action-buttons {
        flex-direction: column;
    }

    .action-buttons .btn {
        width: 100%;
    }

    .tracking-bar {
        flex-wrap: wrap;
    }

    .tracking-step {
        flex: 0 0 50%;
        margin-bottom: 30px;
    }
    }
</style>

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Order Confirmation</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Homepage" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Cart" asp-action="Index">Cart</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Order Confirmation</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->


<!-- Order Success Section Start -->
<div class="container-xxl success-page">
    <div class="container">
        <div class="success-card">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>

            <div class="success-header">
                <h1>Thank You For Your Order!</h1>
                <p>Your order has been placed successfully and will be delivered soon.</p>
                <p>Order ID: <strong>#@Model.Order.OrderNumber</strong></p>
            </div>

            <div class="order-summary">
                <div class="order-row">
                    <span class="order-label">Order Date:</span>
                    <span class="order-value">@Model.Order.CreatedAt.ToShortDateString()</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Delivery Address:</span>
                    <span class="order-value">@Model.User.Address</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Contact:</span>
                    <span class="order-value">@Model.User.PhoneNumber | @Model.User.Email</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Total Amount:</span>
                    <span class="order-value">$@Model.TotalAmount</span>
                </div>
            </div>

            <h4 class="mb-4">Order Details</h4>

            <div class="order-items">
                @foreach (var item in Model.Order.OrderItems)
                {
                    <div class="order-item">
                        <div class="order-item-image">
                            <img
                                src="@Url.Content(item.Product.ImageUrl)"
                                alt="@item.Product.Name">
                        </div>
                        <div class="order-item-details">
                            <h5 class="order-item-title">@item.Product.Name</h5>
                            <div class="order-item-meta">SKU: @item.Product.SkuNumber | Quantity: @item.Quantity</div>
                            <div class="order-item-price">$@item.UnitPrice</div>
                        </div>
                    </div>
                }
            </div>

            <div class="track-order">
                <h4>Track Your Order</h4>
                <p>Your order is being prepared and will be shipped soon. You can track its progress here.</p>

                <div class="tracking-bar">
                    @if (Model.LatestTrackStatus != TrackStatus.Cancelled)
                    {
                        <div class="tracking-step">
                            <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Pending ? "active" : "")">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Pending ? "active" : "")">
                                Pending
                            </div>
                        </div>

                        <div class="tracking-step">
                            <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Shipped ? "active" : "")">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Shipped ? "active" : "")">
                                Shipped
                            </div>
                        </div>

                        <div class="tracking-step">
                            <div class="step-icon @(Model.LatestTrackStatus >= TrackStatus.Delivered ? "active" : "")">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="step-label @(Model.LatestTrackStatus >= TrackStatus.Delivered ? "active" : "")">
                                Delivered
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="tracking-step">
                            <div class="step-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="step-label">Cancelled</div>
                        </div>
                    }
                </div>

                <a asp-controller="Cart" asp-action="OrderTrack" asp-route-orderId="@Model.Order.Id" class="btn btn-outline-primary">
                    <i class="fas fa-map-marker-alt me-2"></i>Track Shipment
                </a>
            </div>

            <div class="action-buttons">
                <a asp-controller="Homepage" asp-action="Products" class="btn btn-primary py-3 px-5">
                    <i class="fa fa-shopping-bag me-2"></i>Continue Shopping
                </a>
                <a asp-controller="Homepage" asp-action="Index" class="btn btn-outline-primary py-3 px-5">
                    <i class="fa fa-home me-2"></i>Back to Home
                </a>
                <a asp-controller="Homepage" asp-action="Contact" class="btn btn-outline-secondary py-3 px-5">
                    <i class="fa fa-headset me-2"></i>Contact Support
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Order Success Section End -->
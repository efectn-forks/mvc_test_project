@using mvc_proje.Database.Entities
@{
    Layout = "_AdminLayout";
}

@model ContactMessageShowViewModel

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-8">
                    <div class="card card-primary card-outline mb-4">
                        <div class="card-header">
                            <h3 class="card-title">İletişim Mesajı Detayları</h3>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Konu:</strong> @Model.ContactMessage.Subject
                                </div>
                                <div class="col-md-6">
                                    <strong>İsim:</strong> @Model.ContactMessage.Name
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <strong>Email:</strong> @Model.ContactMessage.Email
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <strong>Mesaj:</strong><br/>
                                    @Model.ContactMessage.Message
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
</div>
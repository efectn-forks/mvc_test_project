@using mvc_proje.Database.Entities
@model mvc_proje.Models.OrderIndexViewModel

@{
  Layout = "_AdminLayout";
}

<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-8">
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Sipariş ID</th>
                <th>Ürün ID'leri</th>
                <th>Kullanıcı</th>
                <th>Toplam Fiyat</th>
                <th>Adet</th>
                <th>Son Durum</th>
                <th>Sipariş Tarihi</th>
                <th style="width: 80px">İşlemler</th>
              </tr>
              </thead>
              <tbody>

              @foreach (var order in Model.Orders)
              {
                <tr class="align-middle">
                  <td>@order.Id</td>
                  <td>@order.OrderNumber</td>
                  <td>@string.Join(", ", order.OrderItems.Select(p => p.ProductId))</td>
                  <td>@order.User.FullName</td>
                  <td>@order.GetLatestTrack().Status</td>
                  <td>@order.CreatedAt</td>
                  <td>
                    <p class="d-inline-flex gap-1">
                      <a type="submit" asp-controller="Order" asp-action="Show" asp-route-id="@order.Id"
                         class="btn btn-sm btn-success">Detaylar</a>
                      <a type="submit" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id"
                         class="btn btn-sm btn-danger">Sil</a>
                    </p>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-end">
              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>